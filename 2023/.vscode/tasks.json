{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "aoc debug",
        "command": "clang++.exe",
        "args": [
          "-g",
          "-O0",
          "-fdiagnostics-color=always",
          "${file}",
          "adventofcode.cpp",
          "-o",
          "${fileDirname}\\build\\${fileBasenameNoExtension}_clang++.exe",
          "-std=c++23",
          "-Wall",
          "--target=x86_64-w64-windows-gnu"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type": "cppbuild",
        "label": "aoc optimised",
        "command": "clang++.exe",
        "args": [
          "-O3",
          "-march=native",
          "${file}",
          "adventofcode.cpp",
          "-o",
          "${fileDirname}\\build\\${fileBasenameNoExtension}_optimised.exe",
          "-std=c++23",
          "-Wall"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  